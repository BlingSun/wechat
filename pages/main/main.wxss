
page{
  
  font-size:12px;
  background-color: #F6F8F9;
}
.contain{
  font-size:12px;
}
.img_item {
  width: 47%;
  margin-left: 2%;
  display: inline-block;
  vertical-align: top;
}
.list{
   background-color: #fff;
   margin-top:15px;
   border-radius: 5px 5px;
   overflow: hidden;
   box-shadow: 0 1px 2px #ddd;
  
}
.pic{
 position: relative;
}
.label{
  position: absolute;
  z-index: 10;
  bottom:10px;
  left:10px;
  color:#fff;
}

.desc{
  font-size:12px;
  padding:0px 8px 8px 8px;
  color:#2f2f2f;
  
}

.tool{
   column-count:2;
  column-gap: 8px; 
   font-size:12px;
  padding:0px 8px 8px 8px;
  color:#9b9b9b;
}
.count{
  float: right;
}
.see{
  width:16px;
  height:16px;
vertical-align: middle;

}

.assort{
  padding:3px 18px;
  background-color: #D84C29;
  position:fixed;
  z-index: 20;
  top:10px;
  right:10px;
  border-radius: 25px 25px;
  color:#fff;
}
.tags{
  position: fixed;
  z-index: 100;
  top:0px;
  left:0px;
  height:100%; 
  width:100%;
  background-color:#fff;   
  display: flex;
  justify-content: center; 
}
.tcontain{
  padding:20px;
}
.tag{
  padding:5px 8px;
  background-color: #ddd;
  margin-right:10px;
  margin-top:10px;
  word-wrap: nowrap;
  white-space: break-all;
  display: inline-block;

}
.close{
 
  position: absolute;
  bottom:10px;
  
  border-radius:50% 50%;
  padding:0px 10px;
  box-shadow: 0 0 10px #9b9b9b;
  color:#2C71FF;
}
.hide{
  display: none;
}

.refresh{
  position: fixed;
  bottom:10px;
  right:20px;
  width:32px;
  height:32px;
  z-index: 100;
   opacity:0.8;
filter:alpha(opacity=80); /* 针对 IE8 以及更早的版本 */
   border-radius: 50% 50%;
}
.refresh:hover{
  opacity:1;
filter:alpha(opacity=100); /* 针对 IE8 以及更早的版本 */
}

.infoWarn{
  position: fixed;
  bottom:0px;
}
.hide{
  display: none;
}