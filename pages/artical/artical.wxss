.contain{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding:10px 20px;
  font-size:12px;

}
.img{
  width:120px;
  height:170px;
  margin-bottom:20px;
}
.title{
  font-size:20px;
}
.detail{
  font-size:12px;
  color:#999;
  margin-top:10px;
  margin-bottom:20px;
}
.author{
  margin-right:15px;
}
.desc{
  font-size:12px;
}
.bottom{
  height:50px;
  border-top:1px solid #ddd;
width:100%;
position: fixed;
bottom:0px;
z-index: 10;

}
.item{
  width:20%;
  text-align: center;
  display: inline-block;
  height:50px;
  position: relative;

}
.read{  
    width:100%; 
  line-height:70px;
  background-color: orangered;
  border-radius: 50% 50%;
  vertical-align: top;
  color:#fff;  

}

.chapterContain{
  position: fixed;
  z-index: 20;
  bottom:0px;
  background-color:#fff;
  width:100%;
  text-align: center;
  padding:10px 20px;
  box-shadow:1px 1px 2px #999;
  


}
.ctitle{
  height:35px;
  line-height:35px;
}
.close{
  float:left;
  margin-left:20px;
}
.list{
  height:35px;
  line-height:35px;
  border-top:1px solid #ddd;
  margin:0px 20px;


}
.arrow{
  float:right;
}
.hide{
  display: none;
}

.voteNo{
  position:absolute;
  z-index: 20;
  top:0px;
  background-color:#FE831D;
  border-radius: 8px 8px;
  padding:0px 3px;
  font-size:10px;
  line-height:14px;
  color:#fff;
  border:2px solid #fff

}

.hide{
  display: none;
}
