.chat{
  height:150px;
  width:100%;
  box-shadow:0 1px 2px #EDECE8;
  position:fixed;
  z-index:100;
  bottom:0px;
  background-color: #fff;
  border-top:1px solid #ddd;
  padding:10px 0px;
  display: none;
   
}
.reset{
 margin:10px 25px;
}
.send{
font-size:12px;
color:red;
float:right;
margin-right:25px;
padding:3px 8px;
line-height: 20px;
}

.chatContain{

height:100px;
border:1px solid #ddd;
border-radius: 5px 5px;
margin:20px 20px;
width:330px;
overflow-y: scroll;
}

.bhide{
  display: none;
}

.cshow{
  display:block;
}
.like{
  color:#FA3715;
}

.refresh{
  position: fixed;
  bottom:10px;
  right:20px;
  width:32px;
  height:32px;
  z-index: 100;
  opacity:0.8;
filter:alpha(opacity=80); /* 针对 IE8 以及更早的版本 */
   border-radius: 50% 50%;
}
.refresh:hover{
  opacity:1;
filter:alpha(opacity=100); /* 针对 IE8 以及更早的版本 */
}